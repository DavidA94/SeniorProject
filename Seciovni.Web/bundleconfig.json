// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
    {
        "outputFileName": "wwwroot/css/site.min.css",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [
            "wwwroot/css/site.css"
        ]
    },
    {
        "outputFileName": "wwwroot/js/min/contacts.js",
        "inputFiles": [
            "wwwroot/js/Shared/*.js",
            "wwwroot/js/Contacts/*.js"
        ]
    },
    {
        "outputFileName": "wwwroot/js/min/invoiceforms.js",
        "inputFiles": [ "wwwroot/js/FormBuilder/InvoiceForms.js" ]
    },
    {
        "outputFileName": "wwwroot/js/min/base.js",
        "inputFiles": [
            "wwwroot/js/Events/*.js",
            "wwwroot/js/HelperTypes/HTMLElements/*.js",
            "wwwroot/js/builder.js",
            "wwwroot/js/Constants.js",
            "wwwroot/js/ContextMenu.js",
            "wwwroot/js/helpers.js",
            "wwwroot/js/prototypes.js"
        ],
        // Optionally specify minification options
        "minify": {
            "enabled": true,
            "renameLocals": true,
            "preserveImportantComments": false,
            "outputMode": "singleLine"
        },
        // Optinally generate .map file
        "sourceMap": false
    }
]
