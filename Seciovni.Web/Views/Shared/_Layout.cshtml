@using System.Security.Principal

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seciovni</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div id="navbar">
        <a asp-area="" asp-controller="Home" asp-action="Index" id="brand">Seciovni</a>
        <ul>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
            @if (User.HasClaim(c => c.Type == AccessPolicy.ViewInvoicePrivilege || c.Type == AccessPolicy.AdminPrivilege))
            {
                <li><a asp-controller="Invoice" asp-action="View">Invoices</a></li>
            }
            @if (User.HasClaim(c => c.Type == AccessPolicy.FormEditorPrivilege || c.Type == AccessPolicy.AdminPrivilege))
            {
                <li><a asp-controller="FormEditor" asp-action="Index">Form Editor</a></li>
            }
        </ul>
        <ul id="navRight">
            @if (User.Identity.IsAuthenticated)
            {
                <li><a asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
            }
            else
            {
                <li><a asp-controller="Account" asp-action="SignIn">Sign in</a></li>
            }
        </ul>
    </div>

    @if (!ViewData.Keys.Contains("NoContent"))
    {
        <div class="content">
            @RenderBody()
        </div>
    }
    else
    {
        @RenderBody()
    }

    @RenderSection("scripts", required: false)
</body>
</html>
