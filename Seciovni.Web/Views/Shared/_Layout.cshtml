@using System.Security.Principal

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seciovni</title>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div id="navbar">
        @if (!ViewData.Keys.Contains("NoContent"))
        {
            <div class="content">
                @Html.Partial("_Menu")
            </div>
        }
        else
        {
            @Html.Partial("_Menu")
        }
    </div>

    @if (!ViewData.Keys.Contains("NoContent"))
    {
        <div class="content">
            @RenderBody()
        </div>
    }
    else
    {
        @RenderBody()
    }

    @RenderSection("scripts", required: false)
</body>
</html>
